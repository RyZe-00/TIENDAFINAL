<div class="container my-5">
  <!-- Mensaje de notificación -->
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <!-- Renderizar categoría con diseño de tarjeta -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
      <h5 class="card-title mb-0">Categoría: <%= @category.name %></h5>
    </div>
    <div class="card-body">
      <%= render @category %>
    </div>
  </div>

  <!-- Botones de acción -->
  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Editar esta categoría", edit_category_path(@category), class: "btn btn-warning btn-sm" %>
    
    <%= link_to "Volver a las categorías", categories_path, class: "btn btn-secondary btn-sm" %>
    
    <%= button_to "Eliminar esta categoría", @category, method: :delete, data: { confirm: "¿Estás seguro de que deseas eliminar esta categoría?" }, class: "btn btn-danger btn-sm" %>
  </div>
</div>
