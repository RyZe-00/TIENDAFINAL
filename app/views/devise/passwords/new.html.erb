<div class="card shadow-lg mx-auto mt-5" style="max-width: 500px;">
  <div class="card-body">
    <h2 class="card-title text-center mb-4">¿Olvidaste tu contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, "Correo electrónico", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Ingresa tu correo electrónico" %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Enviar instrucciones para restablecer la contraseña", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

